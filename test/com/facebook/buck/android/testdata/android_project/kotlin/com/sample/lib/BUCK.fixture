android_library(
  name = 'lib',
  srcs = glob(['*.kt']),
  language = 'KOTLIN',
  deps = [
    '//res/com/sample/title:title',
    '//res/com/sample/top:top',
    '//res/com/sample/asset_only:asset_only',
  ],
  visibility = [
    'PUBLIC',
  ],
)

android_library(
  name = 'lib_using_transitive_empty_res',
  srcs = glob(['*.kt']),
  language = 'KOTLIN',
  deps = [
    '//res/com/sample/empty_res:empty_res',
  ],
  visibility = [
    'PUBLIC',
  ],
)

android_library(
  name = 'lib_depending_on_main_lib',
  deps = [
    ':lib',
  ],
  visibility = [
    'PUBLIC',
  ],
)

android_library(
  name = 'lib_mixed_sources',
  srcs = glob(['Sample.kt', 'JavaClass.java']),
  language = 'KOTLIN',
  visibility = [
    'PUBLIC',
  ],
)